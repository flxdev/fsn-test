extends _layout

block title
	title Collection inner

block content
	.perspective
		.perspective-container
			include includes/_headsite
			section.wrapper
				-var content = "collection"
				.content(class="content-"+content data-page=content)
					include includes/_collection-inner
			-var currentClass = "Коллекции"
		.burger
			div
		include includes/_navigation-site
		include includes/_popup-request
		script(type="text/javascript").
			$(lazy($(".scroller")));
			var modal = new Form();
			modal.init();
			var form = document.getElementById("formSteps");
			new stepForm(form, {
				onSubmit: function(form) {
					$(".form-container__inner").addClass("hide");
					$(".final-message").addClass("show");
				}
			})